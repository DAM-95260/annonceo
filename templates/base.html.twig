<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <title>{% block title %}Accueil{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
         {# Menu qui sera affich√© sur toutes les pages du Front-Office #}
    <nav class="navbar navbar-dark bg-dark">
        <div class="navbar-brand">
            <a class="navbar-item" href="#">
                <p class="subtitle is-4 has-text-primary"><b>Annonceo</b>
                </p>
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <a class="navbar-start">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="navbar-item" href="#"
                        <span class="icon"><i class="fas fa-lock"></i></span>
                        <span>Back-Office</span>
                    </a>
                {% endif %}
                   
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        {% if app.user %}
                            <a class="button is-primary is-small" href="#">
                                <span class="icon"><i class="fas fa-user-circle"></i></span>
                                <span><strong></strong></span>

                            </a>
                            <a class="button is-light is-small" href="{{ path('app_logout') }}">
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        {% else %}
                            <a class="button is-primary is-small" href="{{ path('app_register') }}">
                                <strong>Inscription</strong>
                            </a>
                            <a class="button is-light is-small" href="{{ path('app_login') }}">
                                Connexion
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
          
{% block content %}
    <div class="section">
        <h1 class="title">Accueil</h1>
       
    </div>
{% endblock %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
